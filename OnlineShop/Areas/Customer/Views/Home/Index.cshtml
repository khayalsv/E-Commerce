@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Product>

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<br />

<div class="row">
    @foreach (var item in Model)
    {
<div class="col-4">
    <div class="card mb-4">
        <h4 class="my-0 font-weight-normal">
            <label style="font-size:23px;color:steelblue">@item.Name</label>
        </h4>
    </div>
    <img src="~/@item.Image" alt="Card Image" class="card-img-top" style="height:300px;" />
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <label style="font-size:20px;color:#a51313"><b>Price:@item.Price</b></label>
            </div>
            <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>
        </div>
    </div>
</div>}
</div>

<div>
    @Html.PagedListPager(Model, generatePageUrl: page => Url.Action("Index", new { page }))
</div>